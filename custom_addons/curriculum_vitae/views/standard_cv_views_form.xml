<odoo>
    <record id="view_standard_cv_form" model="ir.ui.view">
        <field name="name">standard.cv.form</field>
        <field name="model">standard.cv</field>
        <field name="arch" type="xml">
            <form string="Standard CV">
                <sheet>
                    <group>
                        <field name="name" class="oe_title"/>
                    </group>
                    <group>
                        <field name="address"/>
                        <field name="nationality"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="dob"/>

                    </group>
                   <group>
                       <field name="gender" widget="radio"/>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
